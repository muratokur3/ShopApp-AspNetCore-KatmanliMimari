@model List<Category>
<div class="list-group">
    <a href="/products" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == "" ? "active" : "")">Tüm Kategoriler</a>
    @foreach (var category in @Model)
    {
        <a asp-controller="shop"
           asp-action="List"
           asp-route-category="@category.Url"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.Url ? "active" : "")">@category.Name</a>
    }
</div>