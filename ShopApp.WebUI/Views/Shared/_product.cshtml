@model Product

<div class="card mb-5">
    
        <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url">
        <img src="~/Img/@Model.ImageUrl" class="card-img-top" alt="...">
        </a>
    <div class="card-body">
        <h5 class="card-title
                                                                    ">
            @Model.Name
        </h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i> @Model.Price
            </small>
       <div class="card-footer text-center">
            

                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                   
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary"> <i class="fas fa-cart-puls"></i>Add To Cart</button>
                    </div>
                </form>
            
       </div>
        </div>
    
</div>

