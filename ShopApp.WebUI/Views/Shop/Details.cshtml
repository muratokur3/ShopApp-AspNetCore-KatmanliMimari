@model ProductDetailModel

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-0">
            <div class="col-md-7">
                <img src="~/Img/@Model.Product.ImageUrl" class="img-fluid rounded-start" />
            </div>
            <div class="col-md-5">
                <h5 class="card-title">@Model.Product.Name</h5>
                <h3>@Model.Product.Price ₺</h3>
                <p class="card-text"> @Html.Raw(Model.Product.Description)</p>
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px" />
                    </div>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary"> <i class="fas fa-cart-puls"></i>Add To Cart</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>