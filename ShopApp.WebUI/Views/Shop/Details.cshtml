@model ProductDetailModel

<div class="row g-0">
    <div class="col-md-7">
        <img src="~/Img/@Model.Product.ImageUrl" class="img-fluid rounded-start" />
    </div>
    <div class="col-md-5">
        <h1 class="mb-3">@Model.Product.Name</h1><hr />
        @foreach (var category in Model.Categories)
        {
            <a asp-controller="shop" asp-action="list" asp-route-category="@category.Url" class="btn btn-link p-0 mb-3">@category.Name</a>
        }

        <div class="mb-3">
            <h4 class="text-primary mb-3">@Model.Product.Price.ToString("C")₺</h4>
        <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="p-3">@Model.Product.Description</p>
        </div>
    </div>
</div>

