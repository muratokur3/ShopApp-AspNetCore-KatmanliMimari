@model CategoryViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Categories</h1>
        <hr />
        <a class="btn btn-primary btn-sm" asp-action="CategoryCreate">Create New Category</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width:30px;">Id</td>
                    <td>Name </td>
                    <td style="width:150px;">Actions</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count > 0)
                {
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>
                                @category.CategoryId
                            </td>

                            <td>
                                @category.Name
                            </td>

                            <td>
                                <a href="/admin/categories/@category.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form asp-action="DeleteCategory" method="post" style="display:inline">
                                    <input type="hidden" name="CategoryId" value="@category.CategoryId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>

                        </tr>
                    }}
                else
                {
                    <div class="alert alert-warning">
                        <h3 colspan="4" class="text-center">No category found</h3>
                    </div>
                }
        </table>
    </div>
</div>