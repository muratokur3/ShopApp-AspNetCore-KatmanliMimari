@model CategoryModel

<div class="h3">
    Edit Category
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="CategoryEdit" method="post">
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
            <div class="form-group row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url" />
                </div>
            </div>



            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Update Category</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-8">
       
        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <td style="width:30px;">
                        Id
                    </td>
                    <td style="width:10px;">
                        Image
                    </td>
                    <td>
                        Name
                    </td>
                    <td style="width:20px;">
                        Price
                    </td>

                    <td style="width:20px;">
                        Activate
                    </td>
                    <td style="width:150px;">Actions</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count > 0)
                {
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                @product.ProductId
                            </td>
                            <td>
                                <img src="~/Img/@product.ImageUrl" />
                            </td>
                            <td>
                                @product.Name
                            </td>
                            <td>
                                @product.Price
                            </td>
                            <td>
                                @if (product.IsApproved)
                                {
                                    <i class="fa-solid fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-circle-xmark"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/products/@product.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form action="/admin/DeleteFromCategory" method="post" style="display:inline">
                                    <input type="hidden" name="ProductId" value="@product.ProductId" />
                                    <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>

                        </tr>
                    }}
                else
                {
                    <div class="alert alert-warning">
                        <h3 colspan="4" class="text-center">No products found</h3>
                    </div>
                }
        </table>
    </div>
</div>