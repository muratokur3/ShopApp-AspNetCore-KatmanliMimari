@model ProductListViewModel




<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr />
        <a class="btn btn-primary btn-sm" asp-action="ProductCreate">Create New Product</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width:30px;">
                        Id
                    </td>
                    <td style="width:100px;">
                        Image
                    </td>
                    <td>
                        Name
                    </td>
                    <td style="width:20px;">
                        Price
                    </td>
                    <td style="width:20px;">
                        Home
                    </td>
                    <td style="width:20px;">
                        Activate
                    </td>
                    <td style="width:150px;">Actions</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count > 0)
                {
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                @product.ProductId
                            </td>
                            <td>
                                <img src="~/Img/@product.ImageUrl" />
                            </td>
                            <td>
                                @product.Name
                            </td>
                            <td>
                                @product.Price
                            </td>
                            <td>
                                @if (product.IsHome)
                                {
                                    <i class="fa-solid fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-circle-xmark"></i>
                                }
                            </td>
                            <td>
                                @if (product.IsApproved)
                                {
                                    <i class="fa-solid fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-circle-xmark"></i>
                                }
                            </td>
                            <td>
                                <a href="/admin/products/@product.ProductId" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form action="/admin/DeleteProduct" method="post" style="display:inline">
                                    <input type="hidden" name="ProductId" value="@product.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>

                        </tr>
                    }}
                else
                {
                    <div class="alert alert-warning">
                        <h3 colspan="4" class="text-center">No products found</h3>
                    </div>
                }
        </table>
    </div>
</div>