@model ProductModel

<form asp-controller="Admin" asp-action="ProductEdit" method="post">
    <div class="row">
        <div class="col-md-8">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" name="ProductId" value="@Model.ProductId" />
            <div class="form-group row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url" />
                    <span class="text-danger" asp-validation-for="Url"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl" />
                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                </div>
            </div>


            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Update Product</button>
                </div>
            </div>

        </div>
        <div class="col-md-4">
            @if (Model.SelectedCategories.Count > 0)
            {
                @for (int i = 0; i < Model.SelectedCategories.Count; i++)
                {
                    <input type="hidden" name="@Model.SelectedCategories[@i].CategoryId" value="@Model.SelectedCategories[@i].CategoryId" />
                    <input type="hidden" name="@Model.SelectedCategories[@i].Name" value="@Model.SelectedCategories[@i].Name" />
                }
                @foreach (var category in (List<Category>)ViewBag.Categories)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="categoryIds"
                               value="@category.CategoryId"
                               id="category_@(category.CategoryId)" @(Model.SelectedCategories.Any(i => i.CategoryId == category.CategoryId) ? "checked" : "")>
                        <label class="form-check-label" for="category_@(category.CategoryId)">
                            @category.Name
                        </label>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <h3 colspan="4" class="text-center">No category found</h3>
                </div>
            }
        </div>
    </div>
</form>